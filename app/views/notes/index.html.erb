<div class="row justify-content-md-center">
  <div class="col-md-10 align-self-center notes">

    <% if @notes.present? %>
      <div class="row">
        <% @notes.each do |note| %>
          <%= render partial: "notes/note_thumb", locals: {note: note} %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center">
        <%= image_tag "no-data-found.jpg", width: "400"  %>
        <h3 class="text-center">No notes found. Click on <%= link_to "New Note", new_note_path %> to create a note</h3>
      </div>
    <% end %>
  </div>
</div>