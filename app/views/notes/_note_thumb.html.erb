<div class="col-md-3">
  <div class="note" data-item-id="<%= note.id %>">
    <h3><%= note.title %></h3>
    <div class="tags">
      <% note.tags.each do |tag| %>
        <%= render partial: 'tags/tag', locals: {tag: tag, note_count: false} %>
      <% end %>
    </div>
    <div class="body"><%= note.body[0..160] %></div>
    <div class="meta"><%= note.created_at.strftime("%b %d %y @ %h:%m %I") %></div>
  </div>
</div>